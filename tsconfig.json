{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "./dist",
		"rootDir": "./src",
		"typeRoots": ["./node_modules/@types"],
		"allowJs": true,
		"skipLibCheck": true, 
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true, 
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true
	}
}
